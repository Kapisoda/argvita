

<div class="container">
  <div class="row">
    <div id="custom-search-input" style="margin-top: 45px;">
      <div class="input-group col-md-12">

        <%= form_for_filterrific @filterrific do |f| %>
            <!--search-->

            <%= f.text_field(
                    :search_query,
                    class: 'form-control filterrific-periodically-observed', placeholder: "pretraga kategorije..."
                ) %>
            <%= render_filterrific_spinner %>
        <% end %>

        <%= render(
                partial: 'repromaterijal/cat_pics',
                locals: { subcategories: @subcategories }
            ) %>



      </div>
    </div>
  </div>
</div>

