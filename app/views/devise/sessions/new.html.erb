<div class="prdt" style="padding-top: 10px">
  <div class="container">
    <div class="page-header head-page">
      <h2>Prijava</h2>
    </div>
<div style="margin: 30px 30px 30px 30px;" >
<%= simple_form_for(resource, as: resource_name, html: {class: 'form-horizontal'} , url: session_path(resource_name)) do |f| %>

    <%= f.input :email, autofocus: true %>

    <%= f.input :password, autocomplete: "off" %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.button :submit, "Prijavi se", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
  </div>
</div>