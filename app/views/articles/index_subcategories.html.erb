
<div class="well" style="margin-bottom: 0px;">

<%= form_for_filterrific @filterrific do |f| %>

    <br/>
    <div class="row" >
      <div class="col-xs-6 col-md-3">
        Pretraga
        <br/>
        <%# give the search field the 'filterrific-periodically-observed' class for live updates %>
        <%= f.text_field(
                :search_query,
                class: 'form-control filterrific-periodically-observed'
            ) %>
      </div>

      <div class="col-xs-6 col-md-3">
        Subcategory
        <br/>
        <%= f.select(
                :with_subcategory_id,
                @filterrific.select_options[:with_subcategory_id],
                { include_blank: '- Sve -' }, class: 'form-control'
            ) %>
      </div>

      <div class="col-xs-6 col-md-3">
        Ssubcategory
        <br/>
        <%= f.select(
                :with_ssubcategory_id,
                @filterrific.select_options[:with_ssubcategory_id],
                { include_blank: '- Sve -' }, class: 'form-control'
            ) %>
      </div>
    </div>
      <%= render_filterrific_spinner %>
<% end %>

</div>

<%= render(
        partial: 'articles/show_pics',
        locals: { articles: @articles }
    ) %>